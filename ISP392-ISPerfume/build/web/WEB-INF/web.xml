<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>isp392.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProduct</servlet-name>
        <servlet-class>isp392.controllers.SearchProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>isp392.controllers.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>isp392.controllers.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BrandFilterController</servlet-name>
        <servlet-class>isp392.controllers.BrandFilterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DescendingProductByPriceController</servlet-name>
        <servlet-class>isp392.controllers.DescendingProductByPriceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AscendingProductByPriceController</servlet-name>
        <servlet-class>isp392.controllers.AscendingProductByPriceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProduct</servlet-name>
        <url-pattern>/SearchProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/HomeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/CategoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BrandFilterController</servlet-name>
        <url-pattern>/BrandFilterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DescendingProductByPriceController</servlet-name>
        <url-pattern>/DescendingProductByPriceController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AscendingProductByPriceController</servlet-name>
        <url-pattern>/AscendingProductByPriceController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
